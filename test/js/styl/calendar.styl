.calendar {
	width: 315px;
	cursor: default;
	user-select: none;

	.button {
		padding: 0;
		width: 11px;
		height: 16px;
		border: 0;
	}

	&--switcher {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		font-family: 'Open Sans', sans-serif;
		fontweight: 300;
		font-size: 10px;

		&.button {
			width: auto;
			height: auto;
			outline: none;
			padding: 3px 5px;
		}


		&-prev {
			left: 0;
		}

		&-next {
			right: 0;
		}
	}

	&--header {
		padding: 0;
		margin: 5px 0 0;
	}

	&--dates {
		padding-bottom: 3px;
		margin: 0;

		.calendar--day {
			&:hover {
				cursor: pointer;
			}

			&-disabled,
			&-nextMonth,
			&-prevMonth {
				&:hover {
					cursor: default;
				}
			}
		}
	}

	&--day {
		display: inline-block;
		vertical-align: middle;
		box-sizing: border-box;
		margin: 0 10px 2px;
		padding: 5px;
		width: 25px;
		line-height: 8px;
		text-align: center;
		font-size: 12px;
	}

	&--header &--day {
		font-size: 10px;
		text-transform: uppercase;
		font-weight: bold;
		margin: 0 10px 6px;
		padding: 4px 0 6px;
	}

	&--info {
		position: relative;
		line-height: 1;
		text-align: center;
		text-transform: capitalize;
		font-size: 12px;
		padding: 8px 0 7px;
		border-bottom: 1px solid rgba(255,255,255,0.15);
		margin: 0 5px;
	}

	&--month {
		margin: 0 3px 0 0;
	}

	&--month,
	&--year {
		display: inline-block;
		vertical-align: middle;
	}
}

.calendar--dates .calendar--day-selected,
.calendar--dates .calendar--day-selected:hover {
	background: rgba(191,151,86,0.6);
	box-shadow: 0 0 0 1px rgba(255,201,115,0.6) inset;
}

.calendar--dates {
	.calendar--day {
		&-nextMonth,
		&-prevMonth,
		&-disabled {
			&,
			&:hover {
				color: #999;
			}
		}

	}
}
.calendar--day {
	color: #fff;

	&-today {
		color: #000;
		background: #fff;
	}
}

.selectedDay {
	display: block;
	margin: 20px 0;
	font-size: 12px;
	padding: 10px 20px;
}



.calendar,
.selectedDay {
	display: block;
	margin: 20px 0;
	font-family: 'Open Sans', sans-serif;
	font-weight: 300;
	background-color: #3d3b39;
	color: #ccc;
	box-shadow: inset 0 1px 0 rgba(0,0,0,0.06), inset -1px 0 0 rgba(0,0,0,0.04), inset 0 -1px 0 rgba(0,0,0,0.02), inset 1px 0 0 rgba(0,0,0,0.04), 0 1px 1px #000;
}
